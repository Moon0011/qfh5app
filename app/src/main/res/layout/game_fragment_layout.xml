<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4e4e4"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="#14b4c0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="#14b4c0"
            android:gravity="center|left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="88dp"
                android:layout_height="18dp"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/logo" />

            <EditText
                android:layout_width="242dp"
                android:layout_height="32dp"
                android:layout_marginLeft="9dp"
                android:background="@drawable/shape_corner_style1"
                android:hint="请输入游戏名称"
                android:paddingLeft="5dp"
                android:textColorHint="#acacac" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="62dp">

        <com.flyco.tablayout.SegmentTabLayout
            android:id="@+id/tablayout"
            android:layout_width="327dp"
            android:layout_height="37dp"
            android:layout_centerInParent="true"
            tl:tl_bar_color="#ffffff"
            tl:tl_indicator_color="#14b4c4"
            tl:tl_indicator_margin_bottom="2dp"
            tl:tl_indicator_margin_left="2dp"
            tl:tl_indicator_margin_right="2dp"
            tl:tl_indicator_margin_top="2dp"
            tl:tl_tab_width="109dp"
            tl:tl_textBold="BOTH" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_change"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>